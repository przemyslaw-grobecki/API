{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "/resources/Course.json",
    "title": "Course",
    "description": "A Course.",
    "type": "object",
    "properties": {
        "id": {
            "description": "The unique identifier for a league",
            "type": "integer"
        },
        "imageUrl": {
            "description": "An image corellated with league",
            "type": "string"
        },
        "name":{
            "description": "Course name",
            "type": "string"
        }
    },
    "required": [
        "id",
        "imageUrl", 
        "name"
    ],
    "operations": [
        "ADD",
        "GET"
    ]
}
